#!/usr/bin/env ruby

def run(*args)
  puts "$ #{args.join(' ')}"
  unless system(*args)
    exit $?.exitstatus
  end
end

case ENV['SUITE']
when 'python'
  Dir.chdir('python/') do
    run('sudo', 'pip', 'install', '-U', 'pip')
    run('sudo', 'pip', 'install', 'setuptools==67.6.1')
    run('pip', '--version')
    run('sudo', 'make', 'install')
  end
when 'ruby'
else
  abort("Missing or invalid SUITE environment variable")
end
